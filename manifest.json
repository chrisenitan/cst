{
  "name": "Custom site tweaks",
  "permissions": ["activeTab", "declarativeContent", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "version": "0.01",
  "manifest_version": 3,
  "description": "Lets take some control back from these websites",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "custom site tweaks",
    "default_popup": "home.html",
    "default_icon": {
      "16": "images/whave16.png",
      "32": "images/whave32.png",
      "48": "images/whave48.png",
      "128": "images/whave128.png"
    }
  },
  "icons": {
    "16": "images/whave16.png",
    "32": "images/whave32.png",
    "48": "images/whave48.png",
    "128": "images/whave128.png"
  }
}
